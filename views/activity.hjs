                <li>1</li>
                <li>1</li>
                <li>1</li>
                <li>1</li>
                <li>1</li>
            </ul>
        </div>
    </div>
    <!-- Canlendar -->

    <!-- Voting -->
    <div id="voteBoard">
            <div id="voteArea">hello</div>
    </div>
    <!-- Voting -->

    <div class="ui page dimmer"></div>

</div>
</div>
</body>
</html>
