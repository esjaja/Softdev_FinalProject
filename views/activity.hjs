                <li>1</li>
                <li>1</li>
                <li>1</li>
            </ul>
        </div>
    </div>
    <!-- Canlendar -->

    <!-- Voting -->
    <div id="voteBoard">
        <div class="ui top attached tabular menu">
            <a class="item active">Vote</a>
            <a class="item"> Voted </a>
        </div>
        <div class="ui bottom attached segment" style="height: 110pt;">
            <div id="voteArea">hello</div>
        </div>
    </div>
