<!DOCTYPE html>
<html>

<head>
  <title>Activity</title>
    <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/public/stylesheets/activity.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="/semantic/dist/semantic.min.js"></script>
    <script src="/public/javascripts/ActivityPage.js"></script>
    <script src="/public/javascripts/FB.js"></script>
</head>
<body>
     <!-- Activity Description-->
    <div id="activity">
        <div id="menu" class="ui secondary three item menu">
          <a id="home" class="item active">Home</a>
          <a id="vote" class="item">Vote</a>
          <a id="voted" class="item">Voted</a>
        </div>

        <div id="Pages">
          <div id="homePage">
            <div id="activityTitle" spellcheck="false" contenteditable>{{title}}</div>
            <h5 class="ui header left floated dividing">Description</h5>
            <textarea id="activityDescription" spellcheck="false">{{description}}</textarea>
            <div><h5 class="ui header left floated dividing">Date</h5></div>
            <br>
            <!--div class="ui mini pink button"><i class="edit icon"></i>Edit</div-->
            <div id="activityDate">
                <div class="ui purple labels">
                    {{#date}}
                      <div class="ui label">{{.}}</div>
                    {{/date}}
                </div>
            </div>
          </div>

        <!-- VOTE PAGE -->
        <div id="votePage" style="display: none">
            <div class="ui accordion">
            <!-- List every vote from here -->
                        <!-- Pass vote ID -->
             <div class="voteEntry" id="123456">
                <div class="title"><i class="dropdown icon"></i>WHERE TO GO <!-- Title of Vote -->
                    <div class="ui tiny progress" data-value="2" data-total="4">
                    <!-- data-value: number people that has voted, data-total: total number of this activity -->
                      <div class="bar"></div>
                      <div class="label"></div>
                    </div>
                </div>
                <div class="content">
                    <!-- every option begin (each div each option)-->
                    <div>
                        <!-- need self id no matter had choosen this option or not -->
                        <!-- Choose: btn pass 'green' in class -->
                        <!--         img pass 'inline' in style display -->
                        <!-- Not Choose : img pass 'none' -->
                        <button class="ui tiny basic button" style="margin:7pt 0 3pt 0;">
                        TAIPEI <!-- vote option -->
                        </button>
                        <img class="ui avatar image me" src="http://graph.facebook.com/100000362912714/picture?type=square" style="margin-right:-1pt;display:none;">

                        <!-- pass other users' id that have voted -->
                        {{#user_id}}
                        <img class="ui avatar image" src="http://graph.facebook.com/{{.}}/picture?type=square" style="margin-right:-1pt;">
                        {{/user_id}}
                    </div>
                    <!-- every option end -->
                </div>
            </div>
            <!-- end of whole vote -->
          </div>
        </div>
        <!-- END OF VOTE PAGE -->

        <div id="votedPage" style="display: none">voted</div>
        </div>
    </div>
    <!-- Activity Description -->

    <!-- Control bar -->
    <div id="controller">
        <div class="float-left">
            <!-- push Vote display modal-->
            <button id="Vote" class="ui pink button"><i class="wizard icon"></i>New Vote</button>
            <div id="Member" class="ui red scrolling floating dropdown button"><i class="icon users"></i>Member
              <div id="memberList" class="menu">
                <!--<div class="header">
                  People You Might Know
                </div>-->
                  {{#user_id}}
                    <div id="{{.}}" class="item">
                      <img class="ui avatar circular image" src="http://graph.facebook.com/{{.}}/picture?type=square">
                      test
                    </div>
                  {{/user_id}}
              </div>
            </div>
            <div class="ui labeled purple icon action search selection multiple dropdown">
              <input type="hidden" placeholder="add">
              <i name="{{uid}}" value="{{token}}" id="Add" class="add user icon" style="cursor:pointer"></i>
              <div class="default text">Add</div>
              <div id="addListMenu" class="menu">
                <div class="header">
                  Facebook friends
                </div>
              </div>
            </div>
        </div>
        <div class="float-right">
            <button id="Back" class="ui olive rotate button" data-inverted="" data-tooltip="Withdraw from this activity" data-position="bottom center" onclick="window.location.href='/index'"><i class="sign out icon"></i>Back</button>
            <button class="ui blue button" onclick="window.location.href='/logout'"><i class="user icon"></i>Logout</button>
        </div>
    </div>
    <!-- Control bar -->

    <!-- modal -->
    <div class="ui coupled modal">
            <div class="ui small first modal">
              <div class="header">Which type of vote do you want to arise?</div>
              <div class="content" style="height:120pt;">
                <div class="ui two column center aligned grid">
                <div class="column choose dates" style="border-right-style: solid; border-width: 1pt; border-color: #E9E5E5;">
                <div class="ui icon header"><i class="calendar huge icon"></i>Asking dates</div>
                </div>
                <div class="column choose others">
                <div class="ui icon header"><i class="game huge icon"></i>Asking others</div>
                </div>
                </div>
              </div>
            </div>

            <div class="ui small second modal">
                <div class="header">What do you want to ask?</div>
                <div class="content">
                <div class="ui form">
                    <div class="field">
                        <label>Title</label>
                        <input class="title inputs" type="text" placeholder="">
                    </div>
                    <div class="field options">
                        <label>Options</label>
                        <div class="ui left icon input">
                        <input class="option inputs" type="text" placeholder="Add options...">
                        <i class="add icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <label>Deadline</label>
                        <input type="text" onkeydown="return false" id="datepicker" placeholder="Choose a deadline">
                    </div>
                </div>
                </div>
                <div class="actions">
                    <div class="ui done disabled button">Done!</div>
                    <div class="ui approve button">Cancel</div>
                </div>
            </div>
    </div>
    <!-- modal -->


    <!-- Chatting -->
    <div id="chatboard">Chatting!
      <div class="ui comments">
        <div class="comment">
          <a class="avatar"><img src="/public/images/pikachu.png"></a>
          <div class="content">
              <a class="author">Leonardo Pikachu</a>
              <div class="metadata">
                  <div class="date">2 days ago</div>
              </div>
              <div class="text">
              Hey guys, I hope this example comment is helping you read this documentation.
              </div>
              <!--<div class="actions">
                  <a class="reply">Reply</a>
                  <a class="hide">Hide</a>
              </div>-->
          </div>
        </div>
      </div>
      <div id="chatBox">
          <input id="chatMsg" placeholder="Type Message..."></input>
      </div>
    </div>
    <!-- Chatting -->

    <div class="ui page cal dimmer"></div>

    <!-- Canlendar -->
    <div id="calendar" class="ui segments">
        <!-- Month and Year -->
        <div style="margin-bottom: -5pt;margin-top: -10pt">
            <div style="width: 150pt" class="ui mini blue statistic">
                <div id="mon" class="value">November</div>
                <div id="year" class="label">2017</div>
            </div>
            <button id="left" class="monthButton"><i class="chevron circle left icon"></i></button>
            <button id="right" class="monthButton"><i class="chevron circle right icon"></i></button>
        </div>
        <!-- Days -->
        <ul class="weekdays">
            <li>Sun</li>
            <li>Mon</li>
            <li>Tue</li>
            <li>Wed</li>
            <li>Thu</li>
            <li>Fri</li>
            <li>Sat</li>
        </ul>
        <div id="day">
            <!-- Generate days by js-->
            <ul>
