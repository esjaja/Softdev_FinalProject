<!DOCTYPE html>
<html>

<head>
    <title>Fat's Schedule</title>
	<link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="/semantic/dist/semantic.min.js"></script>
	<script src="/public/javascripts/getActivity.js"></script>
</head>

<body>
    <!-- Activity List -->
    <div id="activityList" >
    	<!-- Search -->
        <div class="ui search" style="text-align: center;">
            <div class="ui icon input">
                <input class="prompt" type="text" placeholder="Search activity...">
                <i class="search icon"></i>
            </div>
            <!-- Following ui items should be results -->
            <div class="results"></div>
        </div>
		<!---->

       <div class="ui divider"></div>

        <div id="activities" class="ui link items">
            {{#activities}}
                <div class="item">
                    <div class="content">
                        <a class="header">{{title}}</a>
                        <div class="meta">
                            <span>{{description}}</span>
                        </div>
                        <div class="extra">
                            <div class="ui right floated">{{date}}</div>
                        </div>
                    </div>
                </div>
            {{/activities}}
        </div>
    </div>
    <!-- Activity List -->

    <!-- Control bar -->
    <div id="control">
        <form action="/create_activity" method="post">
            <button id="newActivity" class="ui left floated teal button">
                <i class="add to calendar outline icon"></i> New Activity
            </button>
        </form>
        <form action="/logout" method="get">
            <button id="Logout" class="ui right floated blue button">
                <i class="user icon"></i> Logout
            </button>
        </form>
    </div>
    <!-- Control bar -->

    <!-- Invite Friends -->
    <div id="invite">
        Invite Friends!
    </div>
    <!-- Invite Friends -->

    <!-- Canlendar -->
    <div id="calendar" class="ui segments">
	<div style="margin-bottom: -5pt;margin-top: -10pt">

		<div style="width: 150pt" class="ui mini blue statistic">
		  <div id="mon" class="value">
		    November
		  </div>
		  <div id="year" class="label">
		    2017
		  </div>
		</div>
		<button id="left" class="monthButton"><i class="chevron circle left icon"></i></button>
		<button id="right" class="monthButton"><i class="chevron circle right icon"></i></button>
	</div>
        <ul class="weekdays">
            <li>Sun</li>
            <li>Mon</li>
            <li>Tue</li>
            <li>Wed</li>
            <li>Thu</li>
            <li>Fri</li>
            <li>Sat</li>
        </ul>
		<div id = "day">
        <!-- Generate days by js-->
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        <ul class="days">
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
            <li>1</li>
        </ul>
        </div>
    </div>
    <!-- Canlendar -->

    <!-- Upcoming Activity -->
    <div id="upcomingActivity">
        Upcoming Activity...
    </div>
    <!-- Upcoming Activity -->

</body>
<style>
body {
    padding: 10pt;
    text-align: center;
    font-family: sans-serif;
    font-size: 16px;
    background-image: linear-gradient(rgba(255,255,255,0.1),rgba(255,255,255,0.1)),url("/public/images/wood.jpg");
   ! opacity: 0.8;
}

#activityList {
    height: 470pt;
    width: 25%;
    float: left;
    background-color: #EAF2EE;
    overflow-y: auto;
    overflow-x: hidden;
    padding: 5pt 5pt 5pt 5pt;
    text-align: left;
    border-radius: 5pt;
    border-width: 1pt;
    border-style: solid;
}

#control {
    margin-left: 28%;
    background-color: orange;
    height: 35pt;
    width: 72%;
    padding: 4pt;
    border-radius: 5pt;
    border-width: 1pt;
    text-align: right;
}

#month {
    font-size: 20pt;
    color: orange;
    text-align: left;
    margin-bottom: 3pt;
}

#calendar {
    margin-left: 28%;
    margin-right: 30%;
    background-color: white;
    height: 275pt;
    width: 43%;
    padding: 10pt;
    border-radius: 10pt;
}
#upcomingActivity {
    margin-left: 28%;
    margin-right: 30%;
    background-color: teal;
    height: 140pt;
    width: 43%;
    border-radius: 10pt;
}
#calendar ul {
    list-style: none;
    padding: 0;
    margin: 0;
    width: 100%;
}

#calendar li {
    display: block;
    float: left;
    width: 14.36%;
    padding: 5px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    margin-right: -1px;
    margin-bottom: -1px;
}

#calendar ul.weekdays {
    height: 40px;
    background: pink;
}

#calendar ul.weekdays li {
    text-align: center;
    text-transform: uppercase;
    line-height: 20px;
    border: none !important;
    padding: 10px 7px;
    color: #fff;
    font-size: 13px;
}

#calendar .days li {
    color: #220A0A;
    font-family: sans-serif;
    height: 45px;
}

#calendar .days li:hover {
    background: #d3d3d3;
}

.disabledDays{
	color:#48A3A7;
	background-color:#C0B5C0;
}


#invite {
    margin-top: 20pt;
    float: right;
    background-color: pink;
    width: 25%;
    height: 400pt;
    border-radius: 10pt;
}

::-webkit-scrollbar {
    display: none;
}

.monthButton{
	margin: 0;
	padding: 0;
	border:none;
	background-color: white;
	outline:none;
}

</style>

</html>
